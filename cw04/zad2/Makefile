CC     = gcc
CFLAGS = -g -Wall

.PHONY: all clean

NOCLDSTOP: NOCLDSTOP.c
	$(CC) $(CFLAGS) NOCLDSTOP.c -o NOCLDSTOP

RESETHAND: RESETHAND.c
	$(CC) $(CFLAGS) RESETHAND.c -o RESETHAND

SIGINFO: SIGINFO.c
	$(CC) $(CFLAGS) SIGINFO.c -o SIGINFO

testNOCLDSTOP:
	make clean
	make NOCLDSTOP
	./NOCLDSTOP

testRESETHAND:
	make clean
	make RESETHAND
	./RESETHAND

testSIGINFO:
	make clean
	make SIGINFO
	./SIGINFO

clean:
	$(RM) NOCLDSTOP RESETHAND SIGINFO